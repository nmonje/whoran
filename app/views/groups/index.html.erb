<h1>Listing groups</h1>

<table>
  <tr>
    <th>Created By</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= User.find_by_id(group.user_id).email %></td>
    <td><%= group.title %></td>
    <td><%= group.description %></td>
    <td><%= button_to 'Join this Group!', memberships_path({:membership => { :user_id => current_user.id, :group_id => group.id } })%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Group', new_group_path %>
