<h1>Listing runs</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Distance</th>
    <th>Time</th>
    <th></th>
    <th></th>
  </tr>

<% @runs.each do |run| %>
  <tr>
    <td><%= run.date.month %>/<%= run.date.day%>/<%= run.date.year %></td>
    <td><%= run.distance %></td>
    <td><%= run.time.hour %>:<%= run.time.min %></td>
    <td><%= link_to 'Edit', edit_run_path(run) %></td>
    <td><%= link_to 'Destroy', run, :confirm => 'Are you sure you want to remove this run?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Run', new_run_path %>
