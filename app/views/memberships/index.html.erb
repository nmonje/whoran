<h1> Your groups </h1>

<table>
  <tr>
    <th>Created By</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= User.find_by_id(group.user_id).email %></td>
    <td><%= group.title %></td>
    <td><%= group.description %></td>
    <td><%= link_to 'Show', group %></td>
    <td><%= button_to 'Leate this Group', membership_path(group.memberships.find_all_by_user_id(current_user.id)), :confirm => "Are you sure you want to leave this group?", :method => :delete%></td>
  </tr>
<% end %>
</table>
